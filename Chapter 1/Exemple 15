#include <stdio.h>

int main(void) {
  
  /*Faça um programa que lê do teclado um número do tipo unsigned char (valores de 0 a 255) e apresenta na tela o valor dos oito bits que compões este número. Por exemplo, de a entrada for 12 a saída deve ser 00001100. (utilize o comando “if – else” para determinar o valor de cada bit)*/
  
  int n;
  printf("Número: ");
  scanf("%i", &n);

  int r1,r2,r3,r4,r5,r6,r7,r8;
  if(n%2==0) r1=0; else r1=1; n=n/2;
  if(n%2==0) r2=0; else r2=1; n=n/2;
  if(n%2==0) r3=0; else r3=1; n=n/2;
  if(n%2==0) r4=0; else r4=1; n=n/2;
  if(n%2==0) r5=0; else r5=1; n=n/2;
  if(n%2==0) r6=0; else r6=1; n=n/2;
  if(n%2==0) r7=0; else r7=1; n=n/2;
  if(n%2==0) r8=0; else r8=1;

  printf("%i%i%i%i%i%i%i%i",r8,r7,r6,r5,r4,r3,r2,r1);










  return 0;
}
